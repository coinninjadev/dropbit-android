<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dialog_padding">

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:text="@string/invite_help_message"
        android:textAppearance="@style/TextAppearance" />

    <CheckBox
        android:id="@+id/permission"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/message"
        android:layout_marginTop="@dimen/vertical_margin_large"
        android:button="@drawable/cn_checkmark"
        android:checked="false"
        android:paddingLeft="@dimen/horizontal_margin_medium"
        android:paddingRight="@dimen/horizontal_margin_medium"
        android:paddingStart="@dimen/horizontal_margin_medium"
        android:paddingEnd="@dimen/horizontal_margin_medium"
        android:text="@string/invite_help_preference_text"
        android:textAppearance="@style/TextAppearance.Accent"
        android:textColor="@color/colorAccent" />

    <Button
        android:id="@+id/done"
        style="@style/FlatButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/permission"
        android:text="@string/ok"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/vertical_margin_large" />
</RelativeLayout>