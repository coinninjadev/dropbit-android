<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.coinninja.coinkeeper.view.activity.SplashActivity">

    <ImageView
        android:id="@+id/img_logo"
        android:layout_width="@dimen/dropbit_logo_width"
        android:layout_height="@dimen/dropbit_logo_height"
        android:layout_centerHorizontal="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:contentDescription="@string/app_name"
        android:transitionName="@string/logo_slide"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/dropbit_logo_full"
        tools:targetApi="lollipop" />
</RelativeLayout>
