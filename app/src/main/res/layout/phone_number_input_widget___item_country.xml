<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@id/phone_number_widget_country_selector_flag"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:textAppearance="@style/TextAppearance.Medium"
        tools:text="@sample/country_locale.json/data/flag" />

    <TextView
        android:id="@id/phone_number_widget_country_selector_country_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_toRightOf="@+id/phone_number_widget_country_selector_flag"
        android:textAppearance="@style/TextAppearance.Strong.PrimaryColor"
        tools:text="@sample/country_locale.json/data/country" />

    <TextView
        android:id="@id/phone_number_widget_country_selector_country_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textAppearance="@style/TextAppearance"
        tools:text="@sample/country_locale.json/data/country_code" />

</RelativeLayout>