<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:id="@+id/content"
        android:layout_below="@+id/toolbar"
        android:layout_above="@id/keyboard"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />


    <fragment
        android:id="@+id/keyboard"
        android:name="com.coinninja.coinkeeper.view.fragment.KeyboardFragment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/calculator_footer_layout" />

    <RelativeLayout
        android:id="@+id/calculator_footer_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp">

        <com.coinninja.coinkeeper.view.analytics.AnalyticsButton
            android:id="@+id/request_btn"
            android:layout_width="140dp"
            android:layout_height="58dp"
            android:layout_toLeftOf="@+id/scan_btn"
            android:layout_centerVertical="true"
            android:background="@drawable/request_btn"
            android:text="@string/request_label" />

        <com.coinninja.coinkeeper.view.analytics.AnalyticsButton
            android:id="@+id/scan_btn"
            android:layout_width="73dp"
            android:layout_height="73dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="@dimen/vertical_margin_tiny"
            android:layout_marginRight="@dimen/vertical_margin_tiny"
            android:background="@drawable/scan_btn" />

        <com.coinninja.coinkeeper.view.analytics.AnalyticsButton
            android:id="@+id/send_btn"
            android:layout_width="145dp"
            android:layout_height="58dp"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@id/scan_btn"
            android:background="@drawable/pay_btn"
            android:text="@string/pay_label" />
    </RelativeLayout>

</RelativeLayout>
