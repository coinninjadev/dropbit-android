<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/vertical_margin_large"
        android:layout_marginBottom="@dimen/vertical_margin_large"
        android:contentDescription="@string/app_name"
        android:src="@drawable/ic_dropbit" />

    <TextView
        android:id="@+id/message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="@dimen/vertical_margin_large"
        android:layout_marginEnd="@dimen/vertical_margin_large"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.Message.Dialog"
        tools:text="Success! Let %s know they have Bitcoin waiting for them" />

    <Button
        android:id="@+id/ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/vertical_margin_large"
        android:layout_marginTop="@dimen/vertical_margin_large"
        android:layout_marginEnd="@dimen/vertical_margin_large"
        android:layout_marginBottom="@dimen/vertical_margin_large"
        android:text="@string/notify" />
</LinearLayout>