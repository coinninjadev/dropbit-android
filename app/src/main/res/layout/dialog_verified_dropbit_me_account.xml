<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="@string/dropbit_me_verified_paragraph_1"
        android:textAppearance="@style/TextAppearance.Strong.PrimaryColor" />


    <com.coinninja.coinkeeper.view.button.CopyToBufferButton
        android:id="@+id/dropbit_me_url"
        style="@style/Button.InputBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        tools:text="https://dropbit.me/lkdh80nex3"
        />

</LinearLayout>