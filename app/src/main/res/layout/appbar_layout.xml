<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_drawer_main_content"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">

            <com.coinninja.coinkeeper.view.analytics.AnalyticsLinearLayout
                android:id="@+id/balance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="@dimen/horizontal_margin_medium"
                android:gravity="end|center_vertical"
                android:orientation="vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/primary_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Balance.Primary" />

                <TextView
                    android:id="@+id/alt_balance"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/TextAppearance.Balance.Secondary" />

            </com.coinninja.coinkeeper.view.analytics.AnalyticsLinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="end|center_vertical"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/action_close_btn"
                    app:srcCompat="@drawable/ic_close"
                    android:visibility="gone"
                    android:tint="@android:color/white"
                    android:padding="@dimen/dialog_padding"
                    android:background="@android:color/transparent"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </androidx.appcompat.widget.Toolbar>

        <TextView
            android:id="@+id/appbar_title"
            android:layout_width="match_parent"
            android:layout_height="@dimen/horizontal_margin_large"
            android:gravity="center"
            style="?attr/actionBarTitleStyle"
            android:paddingBottom="@dimen/vertical_margin_small" />

    </com.google.android.material.appbar.AppBarLayout>
</LinearLayout>
