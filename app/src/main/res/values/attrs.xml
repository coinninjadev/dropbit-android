<?xml version="1.0" encoding="utf-8"?>
<resources>
    <attr name="marketGranularityButtonBarButtonStyle" />
    <attr name="actionBarTitleStyle" format="reference" />
    <attr name="actionBarMenuType" format="reference" />
    <attr name="confirmations" format="reference" />
    <attr name="appbarBalance" format="reference" />
    <attr name="phoneNumberInput" format="reference" />
    <attr name="cn_background" format="reference" />

    <declare-styleable name="ConfirmationsWidgetStyle">
        <attr name="beadActiveColor" format="reference|color" />
        <attr name="beadInactiveColor" format="reference|color" />
        <attr name="beadDiameter" format="dimension" />
        <attr name="beadConnectorLength" format="dimension" />
        <attr name="stage" format="enum">
            <enum name="dropbitSent" value="0" />
            <enum name="addressReceived" value="1" />
            <enum name="broadcasting" value="2" />
            <enum name="pending" value="3" />
            <enum name="complete" value="4" />
        </attr>
        <attr name="configuration" format="enum">
            <enum name="dropbit" value="16" />
            <enum name="transaction" value="32" />
        </attr>
        <attr name="lastStepVector" format="reference" />
    </declare-styleable>

    <declare-styleable name="PhoneNumberInputView">
        <attr name="textAppearance" format="reference" />
    </declare-styleable>

    <declare-styleable name="DefaultCurrencyDisplayView">
        <attr name="sentTextAppearance" format="reference" />
        <attr name="receivedTextAppearance" format="reference" />
        <attr name="secondaryTextAppearance" format="reference" />
        <attr name="receivedTextAppearanceLarge" format="reference" />
        <attr name="secondaryTextAppearanceLarge" format="reference" />
        <attr name="fiatTextColor" format="color|reference" />
        <attr name="cryptoTextColor" format="color|reference" />
        <attr name="useCryptoIcon" format="boolean" />
        <attr name="useLargeStyles" format="boolean" />
        <attr name="primaryBackgroundReceived" format="reference" />
        <attr name="primaryBackgroundSent" format="reference" />
        <attr name="primaryForegroundColor" format="color|reference" />
        <attr name="useCryptoSymbol" format="boolean" />
        <attr name="primaryCryptoIconScale" format="float" />
        <attr name="primaryCryptoIconLargeScale" format="float" />
        <attr name="secondaryCryptoIconScale" format="float" />
        <attr name="horizontalPillPadding" format="dimension" />
        <attr name="verticalPillPadding" format="dimension" />
    </declare-styleable>
</resources>
