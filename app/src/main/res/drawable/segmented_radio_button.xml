<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <stroke android:width="1dip" android:color="@color/button_bar_boarder" />
            <solid android:color="@color/font_light_gray" />
        </shape>
    </item>

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/primary" />
        </shape>
    </item>

    <item>
        <shape android:shape="rectangle">
            <stroke android:width="0.5dip" android:color="@color/button_bar_boarder" />
            <solid android:color="@color/font_lightest_gray" />
        </shape>
    </item>
</selector>